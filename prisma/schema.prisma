// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户模型
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  username      String   @unique
  passwordHash  String
  avatar        String?
  emailVerified Boolean  @default(false)
  level         Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // 关系
  credits       Credit?
  favorites     Favorite[]
  ratings       Rating[]
  comments      Comment[]
  trials        Trial[]
  
  @@index([email])
  @@index([username])
}

// 积分模型
model Credit {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions CreditTransaction[]
  
  @@index([userId])
}

// 积分交易记录
model CreditTransaction {
  id        String   @id @default(cuid())
  creditId  String
  amount    Int
  type      String   // 'earn' | 'spend' | 'refund'
  reason    String
  createdAt DateTime @default(now())
  
  credit Credit @relation(fields: [creditId], references: [id], onDelete: Cascade)
  
  @@index([creditId])
  @@index([createdAt])
}

// Skills 模型
model Skill {
  id              String   @id @default(cuid())
  title           String
  titleEn         String?
  description     String
  descriptionEn   String?
  content         String   @db.Text
  contentEn       String?  @db.Text
  thumbnail       String?
  author          String
  authorUrl       String?
  sourceUrl       String
  repositoryUrl   String
  difficulty      String   @default("beginner") // 'beginner' | 'intermediate' | 'advanced'
  isNew           Boolean  @default(true)
  isActive        Boolean  @default(true)
  viewCount       Int      @default(0)
  trialCount      Int      @default(0)
  favoriteCount   Int      @default(0)
  averageRating   Float    @default(0)
  ratingCount     Int      @default(0)
  version         String   @default("1.0.0")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // 关系
  categories      SkillCategory[]
  tags            SkillTag[]
  favorites       Favorite[]
  ratings         Rating[]
  comments        Comment[]
  trials          Trial[]
  
  @@index([title])
  @@index([isActive])
  @@index([createdAt])
  @@index([averageRating])
  @@index([favoriteCount])
  @@index([trialCount])
}

// 分类模型
model Category {
  id          String   @id @default(cuid())
  name        String
  nameEn      String?
  slug        String   @unique
  description String?
  icon        String?
  parentId    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  parent   Category?        @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children Category[]       @relation("CategoryHierarchy")
  skills   SkillCategory[]
  
  @@index([slug])
  @@index([parentId])
}

// Skills 和分类的多对多关系
model SkillCategory {
  skillId    String
  categoryId String
  createdAt  DateTime @default(now())
  
  skill    Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  @@id([skillId, categoryId])
  @@index([skillId])
  @@index([categoryId])
}

// 标签模型
model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  nameEn    String?
  slug      String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  skills SkillTag[]
  
  @@index([slug])
  @@index([count])
}

// Skills 和标签的多对多关系
model SkillTag {
  skillId   String
  tagId     String
  createdAt DateTime @default(now())
  
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@id([skillId, tagId])
  @@index([skillId])
  @@index([tagId])
}

// 收藏模型
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  skillId   String
  createdAt DateTime @default(now())
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)
  
  @@unique([userId, skillId])
  @@index([userId])
  @@index([skillId])
}

// 评分模型
model Rating {
  id        String   @id @default(cuid())
  userId    String
  skillId   String
  rating    Int      // 1-5
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)
  
  @@unique([userId, skillId])
  @@index([userId])
  @@index([skillId])
}

// 评论模型
model Comment {
  id        String   @id @default(cuid())
  userId    String
  skillId   String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([skillId])
  @@index([createdAt])
}

// 试用记录模型
model Trial {
  id              String   @id @default(cuid())
  userId          String
  skillId         String
  input           String   @db.Text
  output          String   @db.Text
  modelId         String
  creditsConsumed Int
  executionTime   Int      // milliseconds
  status          String   // 'success' | 'failed' | 'timeout'
  errorMessage    String?  @db.Text
  createdAt       DateTime @default(now())
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([skillId])
  @@index([createdAt])
}

// 爬虫任务模型
model CrawlerJob {
  id            String   @id @default(cuid())
  repositoryUrl String
  status        String   // 'queued' | 'running' | 'completed' | 'failed'
  skillsFound   Int      @default(0)
  skillsAdded   Int      @default(0)
  skillsUpdated Int      @default(0)
  errorMessage  String?  @db.Text
  startedAt     DateTime?
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  
  @@index([status])
  @@index([createdAt])
}
